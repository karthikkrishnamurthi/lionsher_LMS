<h1>Listing emails</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Email type</th>
    <th>From</th>
    <th>Subject</th>
    <th>Body</th>
    <th>Tenant</th>
    <th>User</th>
    <th>Is parsed</th>
  </tr>

<% for email in @emails %>
  <tr>
    <td><%=h email.id %></td>
    <td><%=h email.email_type %></td>
    <td><%=h email.from %></td>
    <td><%=h email.subject %></td>
    <td><%=h email.body %></td>
    <td><%=h email.tenant_id %></td>
    <td><%=h email.user_id %></td>
    <td><%=h email.is_parsed %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New email', new_email_path %>
