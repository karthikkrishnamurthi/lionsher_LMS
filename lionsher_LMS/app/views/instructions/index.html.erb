  <tr>
    <td><%= instruction.instruction_text %></td>
    <td><%= instruction.structure_component_id %></td>
    <td><%= instruction.tenant_id %></td>
    <td><%= link_to 'Show', instruction %></td>
    <td><%= link_to 'Edit', edit_instruction_path(instruction) %></td>
