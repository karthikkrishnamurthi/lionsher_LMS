<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Response code</th>
    <th>Response message</th>
    <th>Date created</th>
    <th>Payment</th>
    <th>Merchant refno</th>
    <th>Amount</th>
    <th>Mode</th>
    <th>Description</th>
    <th>Is flagged</th>
    <th>Transaction</th>
    <th>Tenant</th>
  </tr>

<% for transaction in @transactions %>
  <tr>
    <td><%=h transaction.response_code %></td>
    <td><%=h transaction.response_message %></td>
    <td><%=h transaction.date_created %></td>
    <td><%=h transaction.payment_id %></td>
    <td><%=h transaction.merchant_refno %></td>
    <td><%=h transaction.amount %></td>
    <td><%=h transaction.mode %></td>
    <td><%=h transaction.description %></td>
    <td><%=h transaction.is_flagged %></td>
    <td><%=h transaction.transaction_id %></td>
    <td><%=h transaction.tenant_id %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New transaction', new_transaction_path %>
