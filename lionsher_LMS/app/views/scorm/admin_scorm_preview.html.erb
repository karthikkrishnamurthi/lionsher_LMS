<%#*Runs scorm 1.2 course along with listener api%>
<%#*Author : Karthik%>
<%#*TODO : Remove hard coded url%>
<html>
  <head>
    <%= favicon_link_tag "lion.png", :rel => "icon" %>
  </head>
  <% unless current_user.typeofuser == "seller" then %>
<frameset frameborder="0" framespacing="0" border="0" rows="0,*" cols="*">
	<frame src="http://<%=h request.subdomain %>.<%=h SITE_URL %>/scorm/admin_api" name="API" noresize>
	<frame src="http://<%=h request.subdomain %>.<%=h SITE_URL %>/<%=h Course.find_by_id(params[:id]).url %>" name="course">
</frameset>
  <% else %>
  <frameset frameborder="0" framespacing="0" border="0" rows="0,*" cols="*">
	<frame src="http://<%=h SITE_URL %>/scorm/admin_api" name="API" noresize>
	<frame src="http://<%=h SITE_URL %>/<%=h Course.find_by_id(params[:id]).url %>" name="course">
</frameset>
  <% end %>
</html>
