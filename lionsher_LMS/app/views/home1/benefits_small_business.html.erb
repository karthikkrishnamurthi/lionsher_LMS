  <div class="next_button">  <a href="/benefits_mid_sized_corporate"><%= image_tag "lionsherhome_images/next_hover.png" %></a>  </div>
  <div class="prev_button">  <a href="/benefits_individual_trainer"><%= image_tag "lionsherhome_images/prev_hover.png" %></a>  </div>
  <div id="mid_panel_content">
    <h3><%= raw @rules['Business']['small_business']['topleft_heading'] %></h3>
