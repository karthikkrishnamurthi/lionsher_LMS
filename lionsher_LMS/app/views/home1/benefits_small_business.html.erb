    <h5>What can you do?</h5>
    <%= image_tag "lionsherhome_images/green_tick.png" %> <%= raw @rules['Business']['small_business']['botm_point1'] %>
    <%= image_tag "lionsherhome_images/green_tick.png" %> <%= raw @rules['Business']['small_business']['botm_point2'] %>
    <%= image_tag "lionsherhome_images/green_tick.png" %> <%= raw @rules['Business']['small_business']['botm_point3'] %>
