<%= stylesheet_link_tag 'benefits_educational_institutes' %>
<%= render :partial => "benefits" %>
<div id="mid_panel">
  <div class="next_button">  <a><%= image_tag "lionsherhome_images/next.png" %></a>  </div>
  <div class="prev_button">  <a href="/benefits_mid_sized_corporate"><%= image_tag "lionsherhome_images/prev_hover.png" %></a>  </div>
  <div id="mid_panel_content">
    <h3><%= raw @rules['Business']['educational_institution']['topleft_heading'] %></h3>
    <div id="buzz_image"><%= image_tag "lionsherhome_images/img_edu_big.jpg" %></div>
    <h2><%= raw @rules['Business']['educational_institution']['topright_heading'] %></h2>
    <p><%= raw @rules['Business']['educational_institution']['description'] %></p>
    <div id="piggie_points">
      <ul type="square">
        <li><p> <%= raw @rules['Business']['educational_institution']['point1'] %></p></li>
        <li><p> <%= raw @rules['Business']['educational_institution']['point2'] %></p></li>
        <li><p> <%= raw @rules['Business']['educational_institution']['point3'] %></p></li>
      </ul>
      <%= image_tag "lionsherhome_images/piggie.jpg" %>
    </div>
  </div>
  <div id="bullet_points">
    <h5>What can you do?</h5>
    <%= image_tag "lionsherhome_images/green_tick.png" %> <%= raw @rules['Business']['educational_institution']['botm_point1'] %>
    <%= image_tag "lionsherhome_images/green_tick.png" %> <%= raw @rules['Business']['educational_institution']['botm_point2'] %>
    <%= image_tag "lionsherhome_images/green_tick.png" %> <%= raw @rules['Business']['educational_institution']['botm_point3'] %>
  </div>
</div>
</div>