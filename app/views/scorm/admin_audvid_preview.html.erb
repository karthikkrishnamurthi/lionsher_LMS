<%#*player for audio/video courses for admin's preview %>
<%#*Author : Aarthi%>
<html>
  <head>
    <script type="text/javascript">
      function swffile()
      {
        var path_of_swf = document.getElementById('path_of_swf_file').value;
        return path_of_swf;
      }
    </script>
    <%= favicon_link_tag "lion.png", :rel => "icon" %>
  </head>
  <body>
    <% learner = Learner.find(params[:id])
    @course = Course.find_by_id(learner.course_id) %>

    <input id="path_of_swf_file" type="hidden" value="/<%= @course.url %>" />
    <% if @course.typeofcourse == "video" then %>
      <object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" codebase="http://fpdownload.adobe.com/pub/shockwave/cabs/flash/swflash.cab#version=8,0,0,0" width="550" height="400" id="urlvariables" align="middle">
        <param name="allowScriptAccess" value="always" />
        <param name="quality" value="high" />
        <param name="bgcolor" value="#000000" />
        <param name='movie' value='/../../player.swf?video_url=<%= @course.url %>&bgcolor=&fgcolor=&volume=60&autoplay=&autoload=on&mute=&autorewind=on&loop=&muteonly=&clickurl=&clicktarget='/>
        <embed src='/../../player.swf?video_url=<%= @course.url %>&bgcolor=&fgcolor=&volume=60&autoplay=&autoload=on&mute=&autorewind=on&loop=&muteonly=&clickurl=&clicktarget=' width='550' height='400' allowFullScreen='true' type='application/x-shockwave-flash'>
      </object>
    <% elsif @course.typeofcourse == "audio" then %>
      <object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" codebase="http://fpdownload.adobe.com/pub/shockwave/cabs/flash/swflash.cab#version=8,0,0,0" width="550" height="50" id="urlvariables" align="middle">
        <param name="allowScriptAccess" value="always" />
        <param name="quality" value="high" />
        <param name="bgcolor" value="#000000" />
        <param name='movie' value='/../../player.swf?video_url=<%= @course.url %>&bgcolor=&fgcolor=&volume=60&autoplay=&autoload=on&mute=&autorewind=on&loop=&muteonly=&clickurl=&clicktarget='/>
        <embed src='/../../player.swf?video_url=<%= @course.url %>&bgcolor=&fgcolor=&volume=60&autoplay=&autoload=on&mute=&autorewind=on&loop=&muteonly=&clickurl=&clicktarget=' width='550' height='50' allowFullScreen='true' type='application/x-shockwave-flash'>
      </object>
    <% elsif @course.typeofcourse == "presentation" then %>
    <div id="presentation" style="overflow: hidden;">
      <object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=10,0,0,0" width="600" height="485" id="container" align="middle">
        <param name="allowScriptAccess" value="sameDomain" />
        <param name="allowFullScreen" value="true" />
        <param name="movie" value="/../../admin_ppt_player.swf" />
        <param name="quality" value="high" />
        <param name="bgcolor" value="#ffffff" />
        <embed src='/../../admin_ppt_player.swf' quality="high" bgcolor="#ffffff" width="600" height="485" name="container" align="middle" allowScriptAccess="sameDomain" allowFullScreen="true" type="application/x-shockwave-flash" pluginspage="http://www.adobe.com/go/getflashplayer" />
      </object>
    </div>

    <% elsif @course.typeofcourse == "flash" then %>
    <div id="shockwave-flash" style="overflow: hidden;">
      <object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=10,0,0,0" width="600" height="485" id="container" align="middle">
        <param name="allowScriptAccess" value="sameDomain" />
        <param name="allowFullScreen" value="true" />
        <param name="movie" value="/<%= @course.url %>" />
        <param name="quality" value="high" />
        <param name="bgcolor" value="#ffffff" />
        <embed src='/<%= @course.url %>' quality="high" bgcolor="#ffffff" width="600" height="485" name="container" align="middle" allowScriptAccess="sameDomain" allowFullScreen="true" type="application/x-shockwave-flash" pluginspage="http://www.adobe.com/go/getflashplayer" />
      </object>
    </div>
     <% end %>

  </body>
</html>