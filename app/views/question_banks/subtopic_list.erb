<%= stylesheet_link_tag 'question_bank' %>


<div class="div_container">
  <form>
    <div class="back_to_qb"> <a href="/question_banks/topic_list/<%= params[:id] %>">Back to topics</a></div>
    <div class="questionbank_title"><%= @question_bank.name %><i><%= @question_bank.type_of_question_bank %></i> > <%= @topic.name %></div>
    <div class="add_questions_button"><input type="submit" value="Add Questions"/></div>
    <div class="new_topic_button"><a href="/question_banks/create_new_subtopic/<%= params[:id] %>?topic=<%= @topic.id %>"><input type="button" value="New Subtopic"/></a></div>
        <%= render "subtopic_table_data" %>
        <%= render "question_bank_list_footer" %>
  </form>
</div>