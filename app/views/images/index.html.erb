<h1>Listing images</h1>

<table>
  <tr>
    <th>Image file name</th>
    <th>Image content type</th>
    <th>Image file size</th>
    <th>Image path</th>
    <th>Question</th>
    <th>Answer</th>
    <th>Tenant</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.image_file_name %></td>
    <td><%= image.image_content_type %></td>
    <td><%= image.image_file_size %></td>
    <td><%= image.image_path %></td>
    <td><%= image.question_id %></td>
    <td><%= image.answer_id %></td>
    <td><%= image.tenant_id %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

