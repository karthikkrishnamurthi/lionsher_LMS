 <div class="writeboardtitle">
   <h3>Edit Details for <%= current_user.login %></h3>
  <a id="home" href="/issues/user_issues/<%= current_user.id %>">Home</a>
 </div>

<%= stylesheet_link_tag 'bugz/current_user' %>

<form action="/issues/update_user_details/<%= current_user.id %>" method="post" enctype="multipart/form-data">
  Name:<input type="text" value="<%= current_user.login %>" name="user[login]"/>
  <br/><br/>
  Email: <%= current_user.email %>
  <br/><br/>
  Profile Picture:<br/>
  <% if !current_user.bugz_profile_file_size.nil? %>
    <%= image_tag current_user.bugz_profile.url(:thumb) %>
    <br/><br/>
  <% end %>
  <input type="file" name="user[bugz_profile]"/>
  <br/><br/>
  <input type="submit" value="Save Changes"/>
  <br/><br/>
</form>
