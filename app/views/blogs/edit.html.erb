<h2>Edit blog</h2>
<a href="/blogs">Back</a>
<form action="/blogs/update/<%= @blog.id %>" class="edit_blog" enctype="multipart/form-data" id="edit_blog_<%= @blog.id %>" method="post">
  <br/>
  <label>Folder Path (Blog images are stored in this folder on the server.)</label><br/><br/>
  <label id="folder_path"><b>../images/blogs/<%= @blog.folder%></b></label><br/><br/>
  <label for="blog_blog_name">Blog name (This appears in the side panel like "Follow <b>Mathew Kuruvilla</b> on"</label><br/>
  <input id="blog_blog_name" name="blog[blog_name]" size="65" type="text" value="<%= @blog.blog_name %>" /> (Mandatory Field)<br/><br/>
  <label for="blog_blog_title">Blog title</label><br/>
  <input id="blog_blog_title" name="blog[blog_title]" size="65" type="text" value="<%= @blog.blog_title %>" /><br/><br/>
  <label for="blog_author">Author</label><br/>
  <input id="blog_author" name="blog[author]" size="65" type="text" value="<%= @blog.author %>" /><br/><br/>
  <label for="blog_blog_type">Blog type</label>
  <select id="blog_blog_type" name="blog[blog_type]"><option value="<%= @blog.blog_type %>" selected="selected">Interview</option>
  <option value="Post">Post</option></select><br/><br/>
  <label for="blog_blog_content">Blog content</label><br/>
  <textarea cols="85" id="blog_blog_content" name="blog[blog_content]" rows="85"><%= @blog.blog_content %></textarea><br/><br/>
  <label for="blog_rss_content">Rss content</label><br/>
  <textarea cols="85" id="blog_rss_content" name="blog[rss_content]" rows="5"><%= @blog.rss_content %></textarea><br/><br/>
  <label for="blog_blog_image_1">Blog image 1</label><br/>
  <input id="blog_profile_photo" name="blog[profile_photo]" size="30" type="file" /><br/><br/>
  <label for="blog_blog_image_2">Blog image 2</label><br/>
  <input id="image2_filename" name="image2[filename]" size="30" type="file" /><br/><br/>
  <label for="blog_blog_image_3">Blog image 3</label><br/>
  <input id="image3_filename" name="image3[filename]" size="30" type="file" /><br/><br/>
  <label for="blog_blog_image_4">Blog image 4</label><br/>
  <input id="image4_filename" name="image4[filename]" size="30" type="file" /><br/><br/>
  <label for="blog_blog_image_5">Blog image 5</label><br/>
  <input id="image5_filename" name="image5[filename]" size="30" type="file" /><br/><br/>
  <label for="blog_designation">Designation</label><br />
  <textarea cols="85" id="blog_designation" name="blog[designation]" rows="5"><%= @blog.designation %></textarea><br/><br/>
  <label for="blog_linkedin">Linkedin</label><br />
  <input id="blog_linkedin" name="blog[linkedin]" size="65" type="text" value="<%= @blog.linkedin %>" /><br/><br/>
  <label for="blog_twitter">Twitter</label><br />
  <input id="blog_twitter" name="blog[twitter]" size="65" type="text" value="<%= @blog.twitter %>" /><br/><br/>
  <label for="blog_blog">Blog</label><br />
  <input id="blog_blog" name="blog[blog]" size="65" type="text" value="<%= @blog.blog %>" /><br/><br/>
  <label for="blog_facebook">Facebook</label><br />
  <input id="blog_facebook" name="blog[facebook]" size="65" type="text" value="<%= @blog.facebook %>" /><br/><br/>
  <label for="blog_orkut">Orkut</label><br />
  <input id="blog_orkut" name="blog[orkut]" size="65" type="text" value="<%= @blog.orkut %>" /><br/><br/>
  <label for="blog_website">Website</label><br />
  <input id="blog_website" name="blog[website]" size="65" type="text" value="<%= @blog.website %>" /><br/><br/>
  <input id="blog_submit" name="commit" type="submit" value="Update" />
</form>
<br/>
